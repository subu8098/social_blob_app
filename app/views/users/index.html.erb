<h2>Explore Users</h2>
<% @users.each do |user| %>
  <div style="display: flex; justify-content: space-between; padding: 10px; box-shadow: 0 1px 3px rgba(108, 106, 224, 0.99); margin-bottom: 10px;">
    <strong><%= user.username %></strong>
    <% if current_user.following.include?(user) %>
      <%= button_to "Unfollow", relationship_path(current_user.active_relationships.find_by(followed_id: user.id)), method: :delete, style: "background-color: #e94949ff; color: white;border-radius: 5px;" %>
    <% else %>
      <%= button_to "Follow", relationships_path(followed_id: user.id), method: :post, style: "background-color: #64e852ff; color: white;border-radius: 5px;" %>
    <% end %>
  </div>
  <hr>
<% end %>
