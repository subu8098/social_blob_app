<h2 style="color: #3a3a99; text-align: center; margin-bottom: 20px;">Login</h2>
<%= form_with url: login_path do %>
  <div style="margin-bottom: 15px;text-align: center;">
    <%= label_tag :email, nil, style: "font-weight: bold;" %><br>
    <%= text_field_tag :email, nil, style: "padding: 6px; border-radius: 4px; border: 1px solid #ccc; width: 220px;" %>
  </div>
  <div style="margin-bottom: 15px;text-align: center;">
    <%= label_tag :password, nil, style: "font-weight: bold;" %><br>
    <%= password_field_tag :password, nil, style: "padding: 6px; border-radius: 4px; border: 1px solid #ccc; width: 220px;" %>
  </div>
  <div style="text-align: center;">
    <%= submit_tag "Log In", style: "background-color: #3a3a99; color: white; border: none; border-radius: 4px; padding: 8px 20px; cursor: pointer;" %>
  </div>
<% end %>